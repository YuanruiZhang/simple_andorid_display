<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/itemRoot"
    tools:context=".adapter.EmpListAdapter"
    tools:ignore="UseCompoundDrawables">

<!--    define scalable image-text pairs. Reserved for potential employee photos-->
<!--     If not needed simply hide it-->
    <ImageView
        android:id="@+id/ivEmployeePic"
        android:layout_width="@dimen/EmployeePhotoSize"
        android:layout_height="@dimen/EmployeePhotoSize"
        android:src="@drawable/fetch_logo"
    />
<!--     A vertical linear layout within horizontal linear layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/tvEmpInfo1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:layout_marginStart="12dp"
                android:text="List Id:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEmpListId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:layout_marginStart="12dp"
                android:text="List Id"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/tvEmpInfo2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:layout_marginStart="12dp"
                android:text="Id:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEmpId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:layout_marginStart="12dp"
                android:text="Id"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/tvEmpInfo3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:layout_marginStart="12dp"
                android:text="Name:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEmpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:layout_marginStart="12dp"
                android:text="Name"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
